        </button>
        <div class="clear"></div>
        <!-- Begin # DIV Form -->
        <div id="modal-login-form-wrapper">
          <!-- Begin # Login Form -->
          <%= render partial:'devise/sessions/login'%>
          <!-- End # Login Form -->
