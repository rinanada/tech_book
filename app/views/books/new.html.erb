  <div class="main-wrapper">
    <!-- start end Page title -->
    <div class="page-title" style="background-image:url(<%= asset_path 'books_on_desk2.jpg'%>);">
      <div class="container">
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">
            <h1 class="hero-title">新規出品</h1>
          </div>
        </div>
      </div>
    </div>
    <!-- end Page title -->
    <div class="breadcrumb-wrapper bg-light-2">
      <div class="container">
        <ol class="breadcrumb-list booking-step">
          <li><%= link_to "トップ", root_path %></li>
          <li><span>新規出品</span></li>
        </ol>
      </div>
    </div>
    <div class="content-wrapper">
      <div class="container">
        <div class="row">
          <div class="col-sm-4 col-md-3">
            <aside class="sidebar with-filter">
              <%= form_for @book, url: { action: :create }, class: "sidebar-search-wrapper bg-light-2" do |f| %>
                <div class="sidebar-search-header">
                  <h4>出品内容</h4>
                </div>
                <div class="sidebar-search-content">
                  <div class="form-group">
                    <%= f.text_field :title, class: "form-control", placeholder: "タイトル" %>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :sub_title, class: "form-control", placeholder: "サブタイトル" %>
                  </div>
                  <div class="form-group">
                    <%= f.number_field :price, class: "form-control", placeholder: "希望販売価格" %>
                  </div>
                  <div class="form-group">
                    <%= text_field_tag "book[category_list]", @book.category_list.join(','), class: "form-control", "data-role" => "tagsinput" %>
                  </div>
                  <!-- tagにplaceholderはつけられないので、labelで -->
                  <div class="form-group">
                    <%= f.number_field :state, class: "form-control", placeholder: "状態" %>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :description, class: "form-control", placeholder: "本の紹介文" %>
                  </div>
                  <div class="form-group">
                    <%= f.file_field :content,multiple: false, class: "form-control", placeholder: "画像アップロード" %>
                  </div>
                  <%= f.submit "出品する", class: "btn btn-primary btn-block" %>
                </div>
              <% end %>
            </aside>
          </div>
      </div>
    </div>
  </div>
